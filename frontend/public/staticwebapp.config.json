{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/images/*.{png,jpg,gif,ico,svg}",
      "/css/*", 
      "/js/*",
      "/static/*",
      "/*.{css,js,map,ico,png,jpg,gif,svg}"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".css": "text/css",
    ".html": "text/html"
  },
  "globalHeaders": {
    "Cache-Control": "no-cache"
  },
  "networking": {
    "allowedIpRanges": ["0.0.0.0/0"]
  }
}
